@model PizzeriaDB_EF.Models.Prodotti

@{
    ViewBag.Title = "Create";
}

<div class="d-flex justify-content-center mx-auto w-50 bg-dark bg-opacity-50 rounded-4 border border-1 border-white mt-5 p-2">
@using (Html.BeginForm("Create", "Prodotti", FormMethod.Post, new { enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.IdProdotto)

    <div class="form-group">
        @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2 text-white" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control bg-dark border border-0 text-white" } })
            @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Foto, htmlAttributes: new { @class = "control-label col-md-2 text-white" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Foto, new { htmlAttributes = new {type="file", @class = "form-control bg-dark border border-0 text-white" } })
            @Html.ValidationMessageFor(model => model.Foto, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Prezzo, htmlAttributes: new { @class = "control-label col-md-2 text-white" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Prezzo, new { htmlAttributes = new { @class = "form-control bg-dark border border-0 text-white" } })
            @Html.ValidationMessageFor(model => model.Prezzo, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.TempoConsegna, htmlAttributes: new { @class = "control-label col-md-2 text-white" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.TempoConsegna, new { htmlAttributes = new { @class = "form-control bg-dark border border-0 text-white" } })
            @Html.ValidationMessageFor(model => model.TempoConsegna, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Ingredienti, htmlAttributes: new { @class = "control-label col-md-2 text-white" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Ingredienti, new { htmlAttributes = new { @class = "form-control bg-dark border border-0 text-white" } })
            @Html.ValidationMessageFor(model => model.Ingredienti, "", new { @class = "text-danger" })
        </div>
    </div>
    <br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Aggiungi" class="btn btn-dark" />
        </div>
    </div>
</div>
}
</div>