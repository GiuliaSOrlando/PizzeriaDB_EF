@model PizzeriaDB_EF.Models.Prodotti

@{
    ViewBag.Title = "Edit";
}
<div class="d-flex flex-column align-items-center mx-auto w-50 bg-white rounded-4 border border-1 border-white mt-5 p-2">
    <h2 class="fw-light">MODIFICA PRODOTTO</h2>

    @using (Html.BeginForm("Edit", "Prodotti", FormMethod.Post, new { @enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.IdProdotto)

            <div class="form-group">
                @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Foto, htmlAttributes: new { @class = "control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Foto, new { type = "file", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Foto, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Prezzo, htmlAttributes: new { @class = "control-label" })
                <div class="col-md-10">
                    <div class="input-group">
                        @Html.EditorFor(model => model.Prezzo, new { htmlAttributes = new { @class = "form-control" } })
                        <div class="input-group-append">
                            <span class="input-group-text">€</span>
                        </div>
                        @Html.ValidationMessageFor(model => model.Prezzo, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.TempoConsegna, htmlAttributes: new { @class = "control-label" })
                <div class="col-md-10">
                    <div class="input-group">
                        @Html.EditorFor(model => model.TempoConsegna, new { htmlAttributes = new { @class = "form-control" } })
                        <div class="input-group-append">
                            <span class="input-group-text">min</span>
                        </div>
                    </div>
                    @Html.ValidationMessageFor(model => model.TempoConsegna, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Ingredienti, htmlAttributes: new { @class = "control-label" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Ingredienti, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Ingredienti, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Salva" class="btn btn-danger w-100 text-center" />
                </div>
            </div>
        </div>
    }
</div>
