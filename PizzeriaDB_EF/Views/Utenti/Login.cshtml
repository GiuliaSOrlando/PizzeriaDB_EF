@model PizzeriaDB_EF.Models.Utenti
@{
    ViewBag.Title = "Login";
}

<div class="d-flex justify-content-center mx-auto w-50 bg-dark bg-opacity-50 rounded-4 border border-1 border-white mt-5 p-2">
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4 class="text-white">LOGIN</h4>
        <hr class="text-white"/>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(m => m.IdUtente)

        <div class="form-group">
            @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label col-md-2 text-white" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control bg-dark border border-0 text-white" } })
                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.HiddenFor(m=>m.Email)

        <div class="form-group">
            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2 text-white" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { type = "password", @class = "form-control bg-dark border border-0 text-white" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.HiddenFor(m => m.Ruolo)

        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Login" class="btn btn-dark" />
            </div>
        </div>
    </div>
}
    </div>